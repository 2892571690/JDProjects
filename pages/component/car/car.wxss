.car_box_top{
  width: 100%;
  height: 600rpx;
  background: #f7f7f7;
  overflow: hidden;
  position: relative;
}
.car_box_top_box{
  text-align: center;
  width: 100%;
  height: 600rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-28%);
}
.car_box_image{
  width: 40%;
  height: 45%;
}
.car_box_text{
  font-size: 32rpx;
  font-weight: 600;
}
.Isolation_line{
  text-align: center;
  background:#f7f7f7; 
  padding-bottom: 20rpx;
}
.Isolation_line .line{
  height: 1px;
  width: 220rpx;
  background: #ccc;
  display: inline-block;
  margin-bottom: 10rpx;
}
.Isolation_line .text{
  font-weight: 600;
}
.Isolation_line .text ::before{
  content: "";
  width: 0;
  height: 0;
  border: 3px solid #ccc;
  transform: rotate(45deg);
  display: inline-block;
  box-sizing: border-box;
  margin-bottom: 4rpx;
  margin-right: 30rpx;
}
.Isolation_line .text ::after{
  content: "";
  width: 0;
  height: 0;
  border: 3px solid #ccc;
  transform: rotate(45deg);
  display: inline-block;
  box-sizing: border-box;
  margin-bottom: 4rpx;
  margin-left: 30rpx;
}